 @model List<CategoryDetailViewModel>
<h2 class="text-center  mb-2">@ViewBag.CategoryName </h2>

    <table class="table table-striped table-dark table-hover">
        <thead>
            <tr>

                <th>Fotoğraf</th>
                <th>Ürün Adı</th>
                <th></th>
            </tr>
        </thead>
        <tbody >

            @foreach (var product in Model)

            {
                    <tr >
                        <td>
                            <img style="height:4rem;width:4rem" src="@product.PhotoUrl" class="rounded mx-auto-d-block" alt="@product.ProductName" />
                            </td>
                        <td class="mx-auto">@product.ProductName</td>
                
                         <td><button class="btn btn-light">@Html.ActionLink( "Ekle", "AddToCommerceList","Product",new { ProductName = product.ProductName } )</button></td>
                    </tr>

            }

        </tbody>
    </table>


