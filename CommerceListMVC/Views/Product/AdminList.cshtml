
<form asp-asp-controller="Product" asp-action="List">
    <div class="input-group mb-3">
        <input type="text" name="id" class="form-control" />
        <input class="btn btn-outline-primary" type="submit" value="Ürün ara" />
    </div>


</form>
<h2 class="text-center mb-2">Tüm Ürünler</h2>


<table class="table table-striped table-dark table-hover">
    <thead>
        <tr>

            <th>Fotoğraf</th>
            <th>Ürün Adı</th>
         
        </tr>
    </thead>
    <tbody>

        @foreach (var product in Model)

        {
                <tr>
                    <td>
                        <img style="height:4rem;width:4rem" src="@product.PhotoUrl" class="rounded mx-auto-d-block" alt="@product.ProductName" />
                    </td>
                    <td class="mx-auto">@product.ProductName</td>


                </tr>

        }

    </tbody>
</table>





