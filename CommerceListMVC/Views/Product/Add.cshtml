@using Entities.Concreate.ViewModels;
@model ProductCreateViewModel


<form asp-action="Add">
     <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="ProductName" class="control-label">ProductName</label>
        <input asp-for="ProductName" class="form-control" />
        <span asp-validation-for="ProductName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="PhotoUrl" class="control-label">PhotoUrl</label>
        <input asp-for="PhotoUrl" class="form-control" />
        <span asp-validation-for="PhotoUrl" class="text-danger"></span>
    </div>

             <div class="form-group">
        <label asp-for="Category" class="control-label">Category</label>
        <select asp-for="Category" class="form-control" asp-items="@ViewBag.Categories"></select>
        <span asp-validation-for="Category" class="text-danger"></span>
     </div>
     <br />


    <div class="form-group">
        <input type="submit" value="Kaydet" class="btn btn-primary" />
    </div>
</form>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
