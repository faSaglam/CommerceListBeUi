@using Entities.Concreate.ViewModels;


@model List<ProductListDetailedViewModel>


<form asp-asp-controller="Product" asp-action="ProductControl">
    <div class="input-group mb-3">
        <input type="text" name="id" class="form-control" />
        <input class="btn btn-outline-primary" type="submit" value="Ürün ara" />
    </div>


</form>
<h2 class="text-center mb-2">Tüm Ürünler</h2>

<button class="btn btn-outline-success"><a asp-controller="Product" asp-action="Add">Ürün ekle</a></button>
<table class="table table-striped table-dark table-hover">
    <thead>
        <tr>
            <th>Ürün ID'si</th>
            <th>Fotoğraf</th>
            <th>Ürün Adı</th>
            <th></th>
        </tr>
    </thead>
    <tbody>

        @foreach (var product in Model)

        {
            <tr>
                <td class="mx-auto">@product.ProductId</td>
                <td>
                    <img style="height:4rem;width:4rem" src="@product.PhotoUrl" class="rounded mx-auto-d-block" alt="@product.ProductName" />
                </td>
                <td class="mx-auto">@product.ProductName</td>

                <td>
                    <button class="btn btn-light">@Html.ActionLink( "Güncelle", "Update", new { ProductID = product.ProductId } )</button>
                    <button class="btn btn-light">@Html.ActionLink( "Sil", "Delete", new { ProductID = product.ProductId } )</button>
                    </td>
            </tr>

        }

    </tbody>
</table>

